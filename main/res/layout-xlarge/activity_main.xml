<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">
    <Button
        android:id="@+id/b0"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:layout_weight="20"
        android:layout_marginRight="5dp"
        />
    <Button
        android:id="@+id/bDecimal"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginRight="5dp"
        />
    <Button
        android:id="@+id/tenPower"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="x10"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginRight="5dp"
        />
    <Button
        android:id="@+id/ans"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Ans"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginRight="5dp"
        />
    <Button
        android:id="@+id/equalTo"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_margin="10dp"
        android:layout_above="@id/l1">
    <Button
        android:id="@+id/b1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        />
    <Button
        android:id="@+id/b2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/b3"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/plus"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/minus"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"
        />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_margin="10dp"
        android:layout_above="@id/l2">
    <Button
        android:id="@+id/b4"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        />
    <Button
        android:id="@+id/b5"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/b6"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/multiply"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="x"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/divide"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"
        />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_margin="10dp"
        android:layout_above="@id/l3">
    <Button
        android:id="@+id/b7"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        />
    <Button
        android:id="@+id/b8"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/black"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"

        />
    <Button
        android:id="@+id/b9"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/delete"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="del"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:id="@+id/AC"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="AC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@android:color/background_dark"
        android:layout_weight="20"
        android:layout_marginLeft="5dp"
        />
    </LinearLayout>


    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:hint="Enter your expression "
        android:gravity="left"
        android:lines="2"
        android:maxLines="2"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/display"
        android:gravity="right"/>

    </RelativeLayout>