<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:weightSum="100"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="7"
        android:background="#3F51B5"
        android:weightSum="100"
        >
     <TextView
         android:layout_weight="95"
         android:layout_width="200dp"
         android:layout_height="match_parent"
         android:text="@string/app_name"
         android:textColor="@android:color/white"
         android:layout_marginLeft="15dp"
         android:layout_marginTop="10dp"
         android:textSize="20dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:textSize="7dp"
        android:textColor="@android:color/black"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>

    <EditText
        android:inputType="number"
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#C8E6C9"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Enter your expression "
        android:gravity="left"
        android:layout_weight="15"
        android:selectAllOnFocus="false"
        />

    <TextView
        android:id="@+id/ansDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8E6C9"
        android:gravity="right"
        android:hint="Answer"
        android:layout_weight="8"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />

    <LinearLayout
        android:id="@+id/l7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:weightSum="120"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="5dp">
        <Button
            android:id="@+id/shift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="Shift"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/pi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="\u03C0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"
            />
        <Button
            android:id="@+id/e"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="e"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"/>
        <Button
            android:id="@+id/hyperbolic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="hyp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp" />
        <Button
            android:id="@+id/fraction"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="sd"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"/>
        <Button
            android:id="@+id/quit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="Quit"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="120"
        android:layout_weight="10"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="5dp">
        <Button
            android:id="@+id/square"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/xSquare"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/xn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/xn"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"
            />
        <Button
            android:id="@+id/log10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/log10"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"
            />
        <Button
            android:id="@+id/loge"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/loge"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"/>
        <Button
            android:id="@+id/xInverse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/xInverse"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"/>
        <Button
            android:id="@+id/factorial"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="x !"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:textAllCaps="false"
            android:layout_marginLeft="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="120"
        android:layout_weight="10"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <Button
            android:id="@+id/openBrac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="("
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            />
        <Button
            android:id="@+id/closeBrac"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text=")"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="1dp"
            />
        <Button
            android:id="@+id/sqRoot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="\u221a"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="1dp"
            />

        <Button
            android:id="@+id/sin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="sin"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="1dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            />

        <Button
            android:id="@+id/cos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="cos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="1dp"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/tan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="tan"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_marginLeft="1dp"
            android:textAllCaps="false"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/l4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:weightSum="100"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        >

        <Button
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            />

        <Button
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:layout_weight="20"
            android:layout_marginLeft="1dp"

            />
        <Button
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginLeft="1dp"
            />
        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="del"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/AC"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="AC"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginLeft="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:weightSum="100"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="5dp"
        >
        <Button
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            />
        <Button
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginLeft="1dp"
            />
        <Button
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginLeft="1dp"
            />
        <Button
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="x"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="/"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginLeft="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:weightSum="100"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="5dp"
        >
        <Button
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            />
        <Button
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginLeft="1dp"
            />
        <Button
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginLeft="1dp"
            />
        <Button
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginLeft="5dp"
            />
        <Button
            android:id="@+id/minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginLeft="1dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:weightSum="100"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <Button
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/black"
            android:layout_weight="20"
            android:layout_marginRight="1dp"
            />
        <Button
            android:id="@+id/bDecimal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginRight="1dp"
            />
        <Button
            android:id="@+id/tenPower"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="x10"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginRight="5dp"
            />
        <Button
            android:id="@+id/ans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Ans"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            android:layout_marginRight="1dp"
            />
        <Button
            android:id="@+id/equalTo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/background_dark"
            android:layout_weight="20"
            />
    </LinearLayout>

</LinearLayout>